{
  "name": "node-amazon",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Suman Bhattarai",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run dev-server\" \"ng serve --proxy-config proxy.conf.json\"",
    "dev-server": "node server",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "compile:server": "tsc -p server.tsconfig.json",
    "lint": "eslint --ext .js ./",
    "lint:ts": "tslint --project tslint.json 'src/**/**.ts'",
    "serve:ssr": "node dist/server.js",
    "build:client-and-server-bundles": "ng build --prod && ng run amazon:server:production",
    "init:db": "node scripts/setupDatabase.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.9",
    "@angular/common": "^8.2.9",
    "@angular/compiler": "^8.2.9",
    "@angular/core": "^8.2.9",
    "@angular/forms": "^8.2.9",
    "@angular/platform-browser": "^8.2.9",
    "@angular/platform-browser-dynamic": "^8.2.9",
    "@angular/platform-server": "^8.2.9",
    "@angular/router": "^8.2.9",
    "@ng-bootstrap/ng-bootstrap": "5.1.1",
    "@nguniversal/common": "^8.1.1",
    "@nguniversal/express-engine": "^8.1.1",
    "@nguniversal/module-map-ngfactory-loader": "^8.1.1",
    "angular2-notifications": "^1.0.2",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "bootstrap": "4.3.1",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "core-js": "^2.4.1",
    "cors": "^2.8.3",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-session": "^1.16.2",
    "express-sslify": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "ngx-pagination": "^3.2.1",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "route-cache": "^0.4.4",
    "rxjs": "^6.5.2",
    "ts-helpers": "^1.1.2",
    "web-animations-js": "2.3.2",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.4",
    "@angular/cli": "8.3.7",
    "@angular/compiler-cli": "^8.2.9",
    "@types/jasmine": "^3.4.0",
    "@types/node": "^12.7.5",
    "codelyzer": "^5.1.0",
    "concurrently": "^4.1.2",
    "eslint": "6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.5",
    "intl": "^1.2.5",
    "jasmine-core": "^3.4.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^4.3.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "lint-staged": "^9.2.5",
    "node-sass": "^4.12.0",
    "protractor": "^6.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  }
}
